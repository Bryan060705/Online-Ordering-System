@model Demo.Models.Ad
@using Microsoft.AspNetCore.Mvc.Rendering

@{
    ViewData["Title"] = "";
    var products = ViewBag.Products as List<Demo.Models.Product> ?? new List<Demo.Models.Product>();
}

<div class="container">
<h2>Create Ad</h2>
<div class="row">
<form asp-action="Create" method="post" enctype="multipart/form-data">
    @Html.AntiForgeryToken()

            <div class="form-row-single">
    <div class="form-group">
        <label asp-for="Title"></label>
        <input asp-for="Title" class="form-control" />
        <span asp-validation-for="Title" class="text-danger"></span>
    </div>
    </div>

                <div class="form-row-single">
    <div class="form-group">
        <label>Link Type</label><br />
        <label style="margin-right:10px;">
            <input type="radio" name="linkType" value="Product" id="createLinkTypeProduct" /> Product
        </label>
        <label>
            <input type="radio" name="linkType" value="Url" id="createLinkTypeUrl" /> URL
        </label>
    </div>
    </div>

                    <div class="form-row-single">
    <div class="form-group" id="createProductGroup">
        <label asp-for="ProductId">Product</label>
        <select asp-for="ProductId" asp-items="@(new SelectList(products, "Id", "Name"))" class="form-control">
            <option value="">-- none --</option>
        </select>
    </div>
    </div>

                        <div class="form-row-single">
    <div class="form-group" id="createUrlGroup" style="display:none;">
        <label asp-for="Url"></label>
        <input asp-for="Url" id="createUrlInput" class="form-control" />
        <span asp-validation-for="Url" class="text-danger"></span>
    </div>
    </div>

                            <div class="form-row-single">
    <div class="form-group">
        <label>Upload Image</label>
        <input type="file" name="imageFile" class="form-control" />
    </div>
    </div>

                                <div class="form-row-single">
    <div class="form-group">
        <label asp-for="DisplayOrder"></label>
                    <input asp-for="DisplayOrder" class="form-control" type="number" min="1" step="1" />
    </div>
    </div>

                                    <div class="form-row-single">
    <div class="form-group form-check">
        <input asp-for="IsActive" class="form-check-input" />
        <label asp-for="IsActive" class="form-check-label"></label>
    </div>
    </div>

    <button type="submit" class="btn btn-primary">Create</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>
</div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }

    <script>
        document.addEventListener("DOMContentLoaded", function () {
            var rProduct = document.getElementById("createLinkTypeProduct");
            var rUrl = document.getElementById("createLinkTypeUrl");
            var productGroup = document.getElementById("createProductGroup");
            var urlGroup = document.getElementById("createUrlGroup");
            var productSelect = document.querySelector("select[name='ProductId']");
            var urlInput = document.getElementById("createUrlInput");

            // 默认选择 Product（可按需改）
            rProduct.checked = true;
            productGroup.style.display = "block";
            urlGroup.style.display = "none";

            rProduct.addEventListener("change", function () {
                if (this.checked) {
                    productGroup.style.display = "block";
                    urlGroup.style.display = "none";
                    if (urlInput) urlInput.value = "";
                }
            });

            rUrl.addEventListener("change", function () {
                if (this.checked) {
                    productGroup.style.display = "none";
                    urlGroup.style.display = "block";
                    if (productSelect) productSelect.value = "";
                }
            });

            if (urlInput) {
                urlInput.addEventListener("input", function () {
                    if (this.value.trim().length > 0) {
                        rUrl.checked = true;
                        productGroup.style.display = "none";
                        urlGroup.style.display = "block";
                        if (productSelect) productSelect.value = "";
                    }
                });
            }
        });
    </script>
}

<style>

    /* container */
    .container {
        max-width: 900px;
