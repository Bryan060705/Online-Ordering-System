@model Demo.Models.Order

@{
    ViewData["Title"] = "";
}

<div class="container">
<h2>Order Details</h2>

<div>
    <h4>Order #@Model.Id</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Member
        </dt>
        <dd class="col-sm-10">
            @(Model.Member?.Username ?? "Guest")
        </dd>
        <dt class="col-sm-2">
            Table
        </dt>
        <dd class="col-sm-10">
            @(Model.Table?.Name ?? "Take Away")
        </dd>
        <dt class="col-sm-2">
            Order Date
        </dt>
        <dd class="col-sm-10">
            @Model.OrderDate.ToString("g")
        </dd>
        <dt class="col-sm-2">
            Is Paid
        </dt>
        <dd class="col-sm-10">
            @(Model.IsPaid ? "Yes" : "No")
        </dd>
        <dt class="col-sm-2">
            Is Take Away
        </dt>
        <dd class="col-sm-10">
            @(Model.IsTakeAway ? "Yes" : "No")
        </dd>
    </dl>

    <h5>Order Items</h5>
    <table class="details-table">
        <thead>
            <tr>
                <th>Product</th>
                <th>Quantity</th>
                <th>Unit Price</th>
                <th>Total Price</th>
                <th>Voucher</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.OrderItems)
            {
                <tr>
                    <td>
                        @if (item.IsVoucher)
                        {
                            <span style="color: red; font-weight: bold;">@item.DisplayName</span>
                        }
                        else
                        {
                            @item.DisplayName
                        }
                    </td>
                    <td>@item.Quantity</td>
                    <td>RM @item.UnitPrice.ToString("F2")</td>
                    <td>RM @item.TotalPrice.ToString("F2")</td>
                    <td>@(item.IsVoucher ? "Yes" : "No")</td>
                </tr>
            }
        </tbody>
    </table>

    <h5>Total: RM @Model.TotalPrice.ToString("F2")</h5>
</div>
    <div class="form-group form-actions" style="margin-top:16px;">
    <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-primary">Edit</a> 
    <a asp-action="Index" class="btn btn-secondary">Back to List</a>
</div>

</div>

<style>

    .container {
        max-width: 1000px;
        margin: 30px auto;
        padding: 20px;
        background: #fff;
        border-radius: 10px;
        box-shadow: 0 4px 15px rgba(0,0,0,0.1);
    }

        .container h2 {
            text-align: center;
            margin-bottom: 25px;
            color: #2c3e50;
        }


    .details-table {
        width: 100%;
        border-collapse: collapse;
        font-size: 15px;
    }

        .details-table thead {
            background-color: #f8f9fa;
        }

        .details-table th, .details-table td {
            padding: 12px 14px;
            border-bottom: 1px solid #e9ecef;
            text-align: center;
            vertical-align: middle;
        }

        .details-table tr:hover {
            background-color: #f1f7ff;
            transition: 0.3s;
        }


    .btn {
        padding: 8px 14px;
        border-radius: 6px;
        font-weight: 700;
        cursor: pointer;
        border: none;
        text-decoration: none;
    }

    .btn-primary {
        background-color: #e74c3c;
        color: #fff;
    }

        .btn-primary:hover {
            background-color: #c0392b;
        }

    .btn-secondary {
        background-color: #95a5a6;
        color: #fff;
    }

    .btn-secondary:hover {
        background-color: grey;
        color: #fff;
    }


    .btn-danger {
        background-color: #e74c3c;
        color: white;
    }

        .btn-danger:hover {
            background-color: #c0392b;
        }

</style>
