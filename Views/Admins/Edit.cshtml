            transform: scale(1.02);
            margin-right: 6px;
        }

    .order-items-block {
        margin-top: 6px;
    }

    .order-items-wrapper {
        border: 1px solid #f0f0f0;
        padding: 10px;
        border-radius: 6px;
        background: #fafafa;
    }

    .order-items-table {
        width: 100%;
        border-collapse: collapse;
        font-size: 14px;
        margin-bottom: 8px;
    }

